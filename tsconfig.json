{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./src/",
        "importsNotUsedAsValues": "error",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitOverride": true
    },
    "include": [
        "src/**/*"
    ]
}